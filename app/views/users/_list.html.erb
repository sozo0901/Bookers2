<div class="col-lg-3">
      <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image, size: "120x120", fallback: "no_image.jpg" %>
      <table class="table">
       <tr>
        <th>name</th>
        <th><%= user.name %></th>
       </tr>
       <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
       </tr>
      </table>
      <% if user.id == current_user.id %>

        <%= link_to edit_user_path(user.id), class: "btn btn-outline-dark btn-lg btn-block", method: :get do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      <% else %>
          <%= link_to user_path(current_user.id), class: "btn btn-outline-dark btn-lg btn-block", method: :get do %>
            <i class="fas fa-user-cog"></i>
          <% end %>

      <% end %>
      <br />
      <br />

      <h2>New book</h2>
      <%= form_with model: book, url: books_path, method: :post, local:true do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opnion</p>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>
  </div class="col-lg-3">

<div class="container">
  <div class="row">


<%= render 'users/list', book: @book_new, user: @user %>


    <div class="col-lg-8 offset-md-1">
     <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= attachment_image_tag user, :profile_image, size: "50x50", fallback: "no_image.jpg" %>
              </td>
              <td><%= user.name %></td>
              <td>
                <%= link_to "Show", user_path(user) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <div class="col-lg-8">
 </div>
</div>
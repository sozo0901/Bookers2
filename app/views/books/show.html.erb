<div class="container">
  <div class="row">


<%= render 'users/list', book: @book_new, user: @user %>


    <div class="col-lg-8 offset-md-1">
     <h2>Books detail</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td>
                <%= attachment_image_tag @book.user, :profile_image, size: "30x30", fallback: "no_image.jpg" %>
                <br />
                <%= @book.user.name %>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <% if @book.user == current_user %>
              <td><%= link_to "edit", edit_book_path(@book) %></td>
              <td></td>
              <td><%=link_to "Destroy", book_path(@book), method: :delete , data: { confirm: 'Are you sure?' } %></td>
               <% end %>
            </tr>
        </tbody>
      </table>
    <div class="col-lg-8">
 </div>
</div>


